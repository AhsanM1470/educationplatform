{
    "$id": "https://mde-network.com/ep/button.schema.json",
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "EP Button",
    "description": "The MDENet education platform button",

    "type": "object",
    "properties": {
        "id": {
            "description": "A unique string used for identification.",
            "type": "string"
        },
        "icon": {
            "description": "Reference to the name of the icon to use.",
            "type": "string"
        },
        "hint": {
            "description": "The tooltip text to display.",
            "type": "string"
        },
        "actionfunction": {
            "description": "Reference to a function id from the functions defined in tool.functions",
            "type": "string"
        },
        "url": {
            "description": "The web address to display.",
            "type": "string"
        }
    },
    "required": ["id", "icon"]
}